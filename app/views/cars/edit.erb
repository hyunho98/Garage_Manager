<h1>EDIT FORM</h1>
<h2><%= "#{@car.year} #{@car.make} #{@car.model}" %></h2>
<h3><%= @car.type %></h3>
<h4>License Plate: <%= @car.license_plate %></h4>
<h4>Price: $<%= @car.price %></h4>
<h4>Current Garage: <a href="/garages/<%= @garage.id %>"><%= @garage.name %></a></h4>
<br><br>
<form action="/cars/<%= @car.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="year">Year: </label>
  <input id="year" type="text" name="year"><br>
  <label for="make">Make: </label>
  <input id="make" type="text" name="make"><br>
  <label for="model">Model: </label>
  <input id="model" type="text" name="model"><br>
  <label for="price">Price: </label>
  <input id="price" type="text" name="price"><br>
  <label for="license_plate">License Plate: </label>
  <input id="license_plate" type="text" name="license_plate"><br>
  <br><p>Select a type of car: </p>

  <% @type.each do |type| %>
    <input id="<%= type %>" type="radio" name="type" value="<%= type %>" <%= 'checked' if @car.type == type %>><%= type %></input><br>
  <% end %>


  <input id="submit" type="submit" value="Save Changes">
</form>
